{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@base-joy/ui-base": ["libs/ui/base/src/index.ts"],
      "@base-joy/ui-base/*": ["libs/ui/base/src/*"],
      "@base-joy/ui-components": ["libs/ui/components/src/index.ts"],
      "@base-joy/ui-components/*": ["libs/ui/components/src/*"],
      "@base-joy/tokens": ["libs/design-system/tokens/src/index.ts"],
      "@base-joy/tokens/*": ["libs/design-system/tokens/src/*"],
      "@base-joy/utils": ["libs/design-system/utils/src/index.ts"]
    },
    "customConditions": ["@base-joy/source"]
  }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@base-joy/tokens": ["../../libs/design-system/tokens/src/index.ts"],
      "@base-joy/tokens/*": ["../../libs/design-system/tokens/src/*"],
      "@base-joy/utils": ["../../libs/design-system/utils/src/index.ts"],
      "@base-joy/ui-unstyled": ["../../libs/ui/unstyled/src/index.ts"],
      "@base-joy/ui-unstyled/*": ["../../libs/ui/unstyled/src/*"],
      "@base-joy/ui-styled": ["../../libs/ui/styled/src/index.ts"],
      "@base-joy/ui-styled/*": ["../../libs/ui/styled/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}

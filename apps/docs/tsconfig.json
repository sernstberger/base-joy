{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@base-joy/tokens": ["../../libs/design-system/tokens/src/index.ts"],
      "@base-joy/tokens/*": ["../../libs/design-system/tokens/src/*"],
      "@base-joy/utils": ["../../libs/design-system/utils/src/index.ts"],
      "@base-joy/ui-base": ["../../libs/ui/base/src/index.ts"],
      "@base-joy/ui-base/*": ["../../libs/ui/base/src/*"],
      "@base-joy/ui-components": ["../../libs/ui/components/src/index.ts"],
      "@base-joy/ui-components/*": ["../../libs/ui/components/src/*"]
    }
  },
  "include": ["src"]
}
